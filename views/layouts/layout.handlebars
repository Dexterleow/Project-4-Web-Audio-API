	<script src="//code.jquery.com/jquery.js"></script>
</head>
<body>
	<!-- <div class="container"> -->
		<div class="header clearfix top_panel">
			<nav>
				<ul class="nav nav-pills pull-right main-section">
					{{#if user}}
					<li role="presentation">	{{ user.name }}</li>
					<li role="presentation"><a href="/">NEWEST MIXES</a></li>
					<li role="presentation"><a href="/">WEEKLY TOP 10</a></li>
					<li role="presentation"><a href="/">MUSIC BOARD</a></li>
